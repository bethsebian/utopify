
          <%= form_for(user, url: users_path) do |f| %>
            <%= f.label :first_name, "First Name:", id:"sign-up-text" %>
            <%= f.text_field :first_name %>

            <%= f.label :last_name, "Last Name:", id:"sign-up-text"%>
            <%= f.text_field :last_name %>

            <%= f.label :username, "Username:", id:"sign-up-text" %>
            <%= f.text_field :username %>

            <%= f.label :password, "Password:", id:"sign-up-text" %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation, "Password Confirmation:", id:"sign-up-text" %>
            <%= f.password_field :password_confirmation %>

            <div class="center", id="new_user_submit">
              <a class="waves-effect waves-light btn-large yellow darken-3" id="large-page-button" >
              <%= f.submit "Create", id:"large-page-button-text"%></a>
            </div>
          <% end %>
