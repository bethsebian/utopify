<div class="container center">
  <div class="col s12 m5">
    <div class="card-panel">
      <h3 class="center"> Cart Contents: </h3>
        <table class="bordered striped highlight centered responsive-table">
          <thead>
            <tr>
              <th data-field="Image">Image</th>
              <th data-field="Title">Title</th>
              <th data-field="Store">Description</th>
              <th data-field="Category">Category</th>
              <th data-field="Price">Price</th>
              <th data-field="Quantity">Quantity</th>
              <th data-field="LineTotal">Line Total</th>
              <th data-field="Remove Item">Remove Item</th>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "partials/cart_items", collection: @cart.items, as: :item %>
        </tbody>
        </table>
          <div class="right-align">
              <h4 id="cart-total-price">Total Price: <%=number_to_currency(@cart.total_price)%></h4>
              <button class="btn waves-effect waves-light">
                <%= button_to "Checkout", orders_path, method: :post, data: { cart: @cart } %>
                <i class="material-icons right">send</i>
              </button>
          </div>
    </div>
  </div>
</div>
